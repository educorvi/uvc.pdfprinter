}

body.template-bgetem-disclaimer .container#main {
  padding: 25pt 50pt !important;
}

body.template-praevdocview #etem-headertitle-bild img {
  min-width: 100%;
  min-height: 100%;
  -webkit-print-color-adjust: exact;
  print-color-adjust: exact;
}
body.template-praevdocview .praevdoc_contentbox,
body.template-praevdocview .praevdoc_filebox,
body.template-praevdocview .praevdoc_linkbox {
  display: block !important;
  page-break-inside: avoid !important;
}

body.template-praevdocview .praevdoc_contentbox img {
  float: left;
  max-width: 25% !important;
  padding: 10px;
}
body.template-praevdocview .praevdoc_contentbox h4 {
  margin-left: 10px;
}
body.template-praevdocview .praevdoc_contentbox p {
  margin: 0 10px 10px;
}
